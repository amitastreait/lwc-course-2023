<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Recent Records</masterLabel>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <!-- Configuring the design attributes -->
    <targetConfigs>
        <targetConfig targets="lightning__HomePage">
            <property name="objectApiName" type="String" label="Select Object" datasource="apex://MyObjectList"/>
            <property name="noOfRecords"   type="String" label="Enter No of Records to display" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>