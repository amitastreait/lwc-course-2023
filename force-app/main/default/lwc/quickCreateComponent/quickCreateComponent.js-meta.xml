<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Quick Object Create</masterLabel>
    <targets>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__UtilityBar</target>
        <target>lightning__FlowScreen</target>
    </targets>
    <!-- Configuring the design attributes -->
    <targetConfigs>
        <targetConfig
            targets="lightning__HomePage,lightning__RecordPage, lightning__UtilityBar, lightning__FlowScreen">
            <property name="objApiName" type="String" default="Case"
                label="Enter the Object API Name" required="true"
                description="This field will contain the API Name for the Object" />
            <property name="placeToBeUsed" type="String" default="Case Record Page"
                label="Provide the value where this component will be used!"
                required="true"
                description="This will be helpful to identify which metadata record to use" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>